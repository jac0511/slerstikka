    <%= f.label :nimi %><br>
    <%= f.text_field :nimi %>
  </div>
  <div class="field">
    <%= f.label :kuvaus %><br>
    <%= f.text_area :kuvaus %>
  </div>
  <div class="field">
    <%= f.label :ainekset %><br>
    <%= f.text_area :ainekset %>
  </div>
  <div class="field">
    <%= f.label :ohjeet %><br>
    <%= f.text_area :ohjeet %>
  </div>
  <div class="field">
    <%= f.label :aika, "Aika-arvio (min)" %><br>
    <%= f.text_field :aika %>
  </div>
  <div class="field">
    <%= f.label :vaativuus %><br>
    <%= f.text_field :vaativuus %>
  </div>
  <div class="field">
    <%= f.label :kuva %><br>
    <%= f.file_field :kuva %>
  </div>
  <div class="field">
	<%= f.hidden_field :user, :value => current_user %>
  </div>
  <div class="actions">
    <%= submit_tag("Tallenna", :class => 'submit-tag') %>
  </div>
