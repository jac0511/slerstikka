      <h3><%= pluralize(@retsept.errors.count, "error") %> prohibited this retsept from being saved:</h3>

      <ul>
      <% @retsept.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :luokka %><br>
    <%= f.text_field :luokka %>
