
<h1>Listing</h1>

<table>
  <thead>
    <tr>
      <th>Nimi</th>
      <th>Kommentti</th>
      <th>Retsept</th>
      <th>Arvostus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vittuilus.each do |vittuilu| %>
      <tr>
        <td><%= vittuilu.user_nimi %></td>
        <td><%= vittuilu.teksti %></td>
        <td><%= vittuilu.retsept_id %></td>
        <td><%= vittuilu.arvostus %></td>
        <td><%= link_to 'Näytä', vittuilu %></td>
        <td><%= link_to 'Muokkaa', edit_vittuilu_path(vittuilu) %></td>
        <td><%= link_to 'Tuhoa', vittuilu, method: :delete, data: { confirm: 'Давай?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

