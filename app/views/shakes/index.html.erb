
<h2>Pirtelöt</h2>

<table>
  <thead>
    <tr>
      <th>Nimi</th>
      <th>Kuvaus</th>
      <th>Arvo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shakes.each do |shake| %>
      <tr>
        <td><%= shake.nimi %></td>
        <td><%= shake.kuvaus %></td>
        <td><%= shake.arvo %></td>
		<% if current_user.hallituksessa == "true" %>
	<td><%= link_to 'Näytä', shake %></td>
      	<td><%= link_to 'Muokkaa', edit_shake_path(shake) %></td>
      	<td><%= link_to 'Hävitä', shake, method: :delete, data: { confirm: 'Ootko varma?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? and current_user.hallituksessa == true %>
	<%= link_to "Uusi Pirtelö", new_shake_path %>
<% end %>